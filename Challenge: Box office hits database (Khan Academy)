-- Create a database of movies along with the year they were released.

CREATE TABLE movies (id INTEGER PRIMARY KEY, name TEXT, release_year INTEGER);
INSERT INTO movies VALUES (1, "Avatar", 2009),
(2, "Titanic", 1997),
(3, "Star Wars: Episode IV - A New Hope", 1977),
(4, "Shrek 2", 2004),
(5, "The Lion King", 1994),
(6, "Disney's Up", 2009);




--Display all the data

SELECT * FROM movies;




-- Sort movies with a release year of 2000 or later in order from oldest to most recent

SELECT * FROM movies WHERE release_year >= 2000 ORDER BY release_year;




-- Sort movies with a release year of 2000 or less in order from newest to oldest

SELECT * FROM movies WHERE release_year <= 2000 ORDER BY release_year desc
