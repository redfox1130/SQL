--Create a Booklist Database

/** Favorite Books;
History (1)
Math (3)
Science (2)
**/

CREATE TABLE Favoritebooks (id INTEGER PRIMARY KEY, name TEXT, rating INTEGER);

INSERT INTO Favoritebooks VALUES (1, "History", 1);
INSERT INTO Favoritebooks VALUES (2, "Math", 3);
INSERT INTO Favoritebooks VALUES (3, "Science", 2);
INSERT INTO Favoritebooks VALUES (4, "Art", 4);




--Display the Database by name

SELECT * FROM Favoritebooks ORDER BY name asc;




--Display the Database by rating (lowest to highest)

SELECT * FROM Favoritebooks ORDER BY rating asc;




--Display the Database by rating descending (highest to lowest)

SELECT * FROM Favoritebooks ORDER BY rating desc;
